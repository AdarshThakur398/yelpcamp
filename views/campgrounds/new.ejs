<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a Campground</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .form-label {
            font-size: 18px;
            transition: color 0.3s ease-in-out; 
            cursor: pointer;
        }

        .form-label:hover {
            color: #28a745; 
        }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        .btn-success,
        .btn-dark {
            transition: background-color 0.3s ease-in-out; 
        }

        .btn-success:hover,
        .btn-dark:hover {
            background-color: #343a40;
        }
    </style>
</head>
<% layout('layouts/boilerplate') %>
<body>
    <div class="mb-1 mt-2 text-center"><h1 class="form-label"><b>NEW CAMPGROUND</b></h1></div>
    <div class="text-center container mt-5">
        <form action="/campgrounds" id="form" class="needs-validation" novalidate method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label"><b>TITLE</b></label>
                <input type="text" class="form-control" name="title" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label"><b>LOCATION</b></label>
                <input type="text" name="location" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
           
            <input type="file" name="file"  id="image" multiple ></div>
            
         
     <div class="mb-3">
      <label for="price" class="form-label" ><b>PRICE</b></label>
    <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input type="text" class="form-control" id="price-input"  name="price" aria-label="Amount (to the nearest dollar)" placeholder="0.00" required>
        <span class="input-group-text"></span>
    </div>
</div>

            
            <div class="mb-3">
                <label for="description" class="form-label"><b>Description</b></label>
                <textarea class="form-control" name="description" aria-label="With textarea" required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
        
            <button id="submit" class="btn btn-success mt-3">SUBMIT</button>
        </form>

        <a href="/campgrounds" class="mt-3 position-fixed bottom-0 end-0 btn btn-dark">ALL CAMPGROUNDS</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
       
        (function() {
          'use strict';
          window.addEventListener('load', function() {
            var form = document.getElementById('form');
            form.addEventListener('submit', function(event) {
              if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
              }
              form.classList.add('was-validated');
            }, false);
          });
        })();
    </script>
    
</body>
</html>
